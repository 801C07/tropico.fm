---
layout: default
---

<article {% if page.feature-img %}class="feature-image"{% endif %}>

  <header id="main" style="background-image: url('{{ page.feature-img | relative_url }}')">
    <div class="title-padder">
      {% if page.hide_title %}
        <div class="feature-image-padding"></div>
      {% else %}
        <h1 id="{{ page.title | default: "" | cgi_escape }}" class="title">
          {{ page.title }}</h1>
        {% if page.subtitle %}
          <h2 class="subtitle">{{ page.subtitle }}</h2>
        {% endif %}
      {% endif %}
    </div>
  </header>

  <section class="post-content">
    <h1>Programmer: {{ page.programmer }}</h1>

    {% if page.profile %}
      <div class="profile">
        <img src={{ page.profile }} />
        <div>{{ content }}</div>
      </div>
    {% else %}
      {{ content }}
    </div>
  {% endif %}
  {% if page.mixcloud %}
    <iframe class="mixcloud" src={{page.mixcloud}} frameborder="0"></iframe>
  {%endif%}
  </section>


  <!-- Tag list for portfolio -->
  {% capture tag_list %}
    {{ page.tags | join: "|" }}{% endcapture %}
  {% include default/tags_list.liquid tags=tag_list %}

</article>